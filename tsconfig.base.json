{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@restaurant/core-domain": ["libs/core-domain/src/index.ts"],
      "@restaurant/export-definition": ["tools/export-definition/src/index.ts"],
      "@restaurant/graphql-codegen": ["tools/graphql-codegen/src/index.ts"],
      "@restaurant/shared-proto-ts": ["libs/shared-protos/typescript/src/index.ts"],
      "@restaurant/shared-utils": ["libs/shared-utils/src/index.ts"],
      "@restaurant/structure-generator": ["tools/structure/src/index.ts"],
      "@restaurant/website-graphql": ["libs/website-graphql/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
